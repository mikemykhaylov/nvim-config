{
  "neodev": {
    "library": {
      "enabled": true,
      "plugins": true
    }
  },
  "neoconf": {
    "plugins": {
      "lua_ls": {
        "enabled": true
      }
    }
  },
  "lspconfig": {
    "lua_ls": {
      "Lua.format.enable": false
    },
    "texlab": {
      "texlab": {
        "build": {
          "args": ["-pdflua", "-interaction=nonstopmode", "-synctex=1", "%f"],
          "executable": "latexmk",
          "forwardSearchAfter": true,
          "onSave": true
        },
        "forwardSearch": {
          "executable": "zathura",
          "args": ["--synctex-forward", "%l:1:%f", "%p"]
        }
      }
    }
  }
}
